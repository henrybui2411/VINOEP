\begin_layout Plain Layout

\size small
QUY TẮC QUAN TRỌNG.
\begin_inset Formula $\,$
\end_inset

 Khi 
\begin_inset Formula $x\to\infty$
\end_inset

 tỷ số của các đa thức 
\begin_inset Formula $f(x)/g(x)$
\end_inset

 có cùng giới hạn với tỷ số của các 
\emph on
số hạng dẫn đầu
\emph default
 của chúng.
 
\begin_inset Formula $f(x)=x^{3}-x+2$
\end_inset

 có số hạng dẫn đầu 
\begin_inset Formula $x^{3}$
\end_inset

 và 
\begin_inset Formula $g(x)=5x^{6}+x+1$
\end_inset

 có số hạng dẫn đầu 
\begin_inset Formula $5x^{6}$
\end_inset

.
 Vì vậy 
\begin_inset Formula $f(x)/g(x)$
\end_inset

 hành xử như 
\begin_inset Formula $x^{3}/5x^{6}\to0$
\end_inset

, 
\begin_inset Formula $g(x)/f(x)$
\end_inset

 hành xử như 
\begin_inset Formula $5x^{6}/x^{3}\to\infty$
\end_inset

, 
\begin_inset Formula $(f(x))^{2}/g(x)$
\end_inset

 hành xử như 
\begin_inset Formula $x^{6}/5x^{6}\to1/5$
\end_inset

.
\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:2-6-35"

\end_inset

 Tìm giới hạn khi 
\begin_inset Formula $x\to\infty$
\end_inset

 nếu nó tồn tại: 
\end_layout

\begin_layout Exercise

\size small
\begin_inset Flex Multiple Columns
status open

\begin_layout Plain Layout

\size small
\begin_inset Formula ${\displaystyle \dfrac{3x^{2}+2x+1}{3+2x+x^{2}}}$
\end_inset

 
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Formula ${\displaystyle \dfrac{x^{4}}{x^{3}+x^{2}}}$
\end_inset

 
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Formula ${\displaystyle \dfrac{x^{2}+1000}{x^{3}-1000}}$
\end_inset

 
\end_layout

