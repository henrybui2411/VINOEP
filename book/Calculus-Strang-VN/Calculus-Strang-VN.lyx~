\begin_inset Caption Standard

\begin_layout Plain Layout
\begin_inset CommandInset label
LatexCommand label
name "fig:4-12"

\end_inset

 
\begin_inset Formula $\cos^{2}x+\sin^{2}x=1$
\end_inset

 và 
\begin_inset Formula $1+\tan^{2}x=\sec^{2}x$
\end_inset

 và 
\begin_inset Formula $1+\cot^{2}x=\csc^{2}x$
\end_inset

.
\end_layout

\end_inset


\end_layout

\end_inset


