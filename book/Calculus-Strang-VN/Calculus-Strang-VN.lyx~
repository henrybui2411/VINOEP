offset "0.2ex"
width "100col%"
height "1pt"

\end_inset


\end_layout

\begin_layout Subsection*
BÀI TẬP 3.1 
\begin_inset CommandInset label
LatexCommand label
name "exer:3-1"

\end_inset


\end_layout

\begin_layout Standard
\noindent
\begin_inset CommandInset line
LatexCommand rule
offset "0.2ex"
