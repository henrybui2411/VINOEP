\begin_layout Example
\noindent

\series bold
\begin_inset CommandInset label
LatexCommand label
name "exa:2-6-4"

\end_inset


\series default
Các số 
\begin_inset Formula $\frac{3}{2},\frac{5}{4},\frac{7}{6},\ldots$
\end_inset

 hội tụ tới 
\begin_inset Formula $L=1$
\end_inset

.
 Sau khi trừ 
\begin_inset Formula $1$
\end_inset

, các hiệu 
\begin_inset Formula $\frac{1}{2},\frac{1}{4},\frac{1}{6},\ldots$
\end_inset

 hội tụ tới không.
 Nhứng hiệu này là 
\begin_inset Formula $\left|a_{n}-L\right|$
\end_inset

.
 
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


