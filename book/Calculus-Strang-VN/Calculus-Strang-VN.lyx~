\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Plain Layout

\series bold
\size small
Trong 
\begin_inset CommandInset ref
LatexCommand ref
reference "exer:4-3-21"

\end_inset

-
\begin_inset CommandInset ref
LatexCommand ref
reference "exer:4-3-26"

\end_inset

, tìm 
\begin_inset Formula $dy/dx$
\end_inset

 theo 
\begin_inset Formula $x$
\end_inset

 và 
\begin_inset Formula $dx/dy$
\end_inset

 theo 
\begin_inset Formula $y$
\end_inset

.
\end_layout

