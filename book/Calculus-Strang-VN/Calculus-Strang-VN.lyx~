\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:4-4-9"

\end_inset

 Nếu 
\begin_inset Formula $y=\cos x$
\end_inset

, tìm một công thức đối với 
\begin_inset Formula $\sin x$
\end_inset

.
 Trước tiên vẽ một tam giác vuông với góc 
\begin_inset Formula $x$
\end_inset

 và cạnh kề 
\begin_inset Formula $y$
\end_inset

—hai cạnh còn lại là gì?
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:4-4-10"

\end_inset

 Nếu 
\begin_inset Formula $y=\cos x$
\end_inset

, tìm một công thức đối với 
\begin_inset Formula $\tan x$
\end_inset

.
 Trước tiên vẽ một tam giác vuông với góc 
\begin_inset Formula $x$
\end_inset

 và cạnh đối 
\begin_inset Formula $y$
\end_inset

—hai cạnh còn lại là gì?
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:4-4-11"

\end_inset

 Lấy đạo hàm theo 
\begin_inset Formula $x$
\end_inset

 của 
\begin_inset Formula $\sin^{-1}(\sin x)=x$
\end_inset

 bằng quy tắc xích.
 Kiểm tra rằng 
\begin_inset Formula $d(\sin^{-1}y)/dy=1/\sqrt{1-y^{2}}$
\end_inset

 đưa ra kết quả đúng.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:4-4-12"

\end_inset

 Lấy đạo hàm theo 
\begin_inset Formula $y$
\end_inset

 của 
\begin_inset Formula $\cos^{-1}(\cos y)=y$
\end_inset

 bằng quy tắc xích.
 Kiểm tra rằng 
\begin_inset Formula $d(\cos^{-1}y)/dy=-1/\sqrt{1-y^{2}}$
\end_inset

 đưa ra kết quả đúng.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

