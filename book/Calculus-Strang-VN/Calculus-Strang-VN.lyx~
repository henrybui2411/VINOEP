\begin_layout Exercise

\size small
Lặp lại Bài tập 
\begin_inset CommandInset ref
LatexCommand ref
reference "exer:3-3-46"

\end_inset

 nhưng trình bày 
\begin_inset Formula $y(x)=x^{3}-4x^{2}+x+2$
\end_inset

 và 
\begin_inset Formula $dy/dx$
\end_inset

 và 
\begin_inset Formula $d^{2}y/dx^{2}$
\end_inset

 trên cùng một đồ thị.
 
\end_layout

\begin_layout Plain Layout

