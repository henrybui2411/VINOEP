(c) 
\begin_inset Formula $\dfrac{f(x+h)-f(x-h)}{2h}$
\end_inset

 
\end_layout

\begin_layout Plain Layout

\size small
(d) 
\begin_inset Formula $\dfrac{f(x+1)-f(x)}{h}$
\end_inset

 
\end_layout

\begin_layout Plain Layout

