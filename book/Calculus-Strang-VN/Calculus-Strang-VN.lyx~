\begin_inset Text

\begin_layout Plain Layout

\size footnotesize
\begin_inset Formula $\begin{array}{ccc}
\int\frac{dx}{ax^{2}+bx+c} & = & \frac{1}{\sqrt{D}}\ln|\frac{2ax+b-\sqrt{D}}{2ax+b+\sqrt{D}},\,D>0\\
 & = & \frac{2}{\sqrt{-D}}\tan^{-1}\frac{2ax+b}{\sqrt{-D}},\,D<0\\
 & = & \frac{-2}{2ax+b},\,D=0
\end{array}$
\end_inset


\end_layout

\end_inset
</cell>
