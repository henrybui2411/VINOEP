\begin_inset Formula $ax^{n}/bx^{n}$
\end_inset

 là 
\begin_inset Formula $a/b$
\end_inset

.
\end_layout

\begin_layout Exercise

\size small
(c) Nếu 
\begin_inset Formula $df/dx=x^{4}$
\end_inset

 và 
\begin_inset Formula $dg/dx=x^{4}$
\end_inset

, khi đó 
\begin_inset Formula $f(x)=g(x)$
\end_inset

.
\end_layout

\begin_layout Exercise

\size small
(d) 
\begin_inset Formula $(f(x)-f(a))/(x-a)$
\end_inset

 tiến tới 
\begin_inset Formula $f^{\prime}(a)$
\end_inset

 khi 
\begin_inset Formula $x\to a$
\end_inset

.
 
\end_layout

