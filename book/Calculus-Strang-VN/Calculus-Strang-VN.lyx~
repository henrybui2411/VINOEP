\begin_inset CommandInset label
LatexCommand label
name "exer:2-6-26"

\end_inset

 Khẳng định nào sau đây là định nghĩa của giới hạn? 
\end_layout

\begin_layout Exercise

\size small
(1) 
\begin_inset Formula 
\begin{align*}
 & \left|f(x)-L\right|<\epsilon\\
\Rightarrow & 0<\left|x-a\right|<\delta
\end{align*}

\end_inset


\end_layout

\begin_layout Exercise

\size small
(2)
\end_layout

\begin_layout Exercise

\size small
\begin_inset Formula 
\begin{align*}
 & \left|f(x)-L\right|<\epsilon\\
\Leftarrow & 0<\left|x-a\right|<\delta
\end{align*}

\end_inset


\end_layout

\begin_layout Exercise

\size small
(3)
\end_layout

\begin_layout Exercise

\size small
\begin_inset Formula 
\begin{align*}
 & \left|f(x)-L\right|<\epsilon\\
\Leftrightarrow & 0<\left|x-a\right|<\delta
\end{align*}

\end_inset


\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:2-6-27"

\end_inset

 Định nghĩa của 
\begin_inset Quotes eld
\end_inset


\begin_inset Formula $f(x)\to L$
\end_inset

 khi 
\begin_inset Formula $x\to\infty$
\end_inset


\begin_inset Quotes erd
\end_inset

 đó là: Đối với bất kỳ 
\begin_inset Formula $\epsilon$
\end_inset

 nào, đều có một 
\begin_inset Formula $X$
\end_inset

 sao cho 
\begin_inset Formula $\underbar{\qquad\qquad}<\epsilon$
\end_inset

 nếu 
\begin_inset Formula $x>X$
\end_inset

.
 Đưa ra một ví dụ mà 
\begin_inset Formula $f(x)\to4$
\end_inset

 khi 
\begin_inset Formula $x\to\infty$
\end_inset

.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:2-6-28"

\end_inset

 Đưa ra một định nghĩa đúng của 
\begin_inset Quotes eld
\end_inset


\begin_inset Formula $f(x)\to0$
\end_inset

 khi 
\begin_inset Formula $x\to-\infty$
\end_inset

.
\begin_inset Quotes erd
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:2-6-29"

\end_inset

 Giới hạn của 
\begin_inset Formula $f(x)=\sin x/x$
\end_inset

 khi 
\begin_inset Formula $x\to\infty$
\end_inset

 là 
\begin_inset Formula $\underbar{\qquad\qquad}$
\end_inset

.
 Đối với 
\begin_inset Formula $\epsilon=.01$
\end_inset

, tìm một điểm 
\begin_inset Formula $X$
\end_inset

 mà sao cho đối với mọi 
\begin_inset Formula $x>X$
\end_inset

, 
\begin_inset Formula $|f(x)|<\epsilon$
\end_inset

.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset Separator plain
\end_inset


\end_layout

