(b) 
\begin_inset Formula $\frac{1}{2},\frac{1}{2}+\frac{1}{4},\frac{1}{2}+\frac{1}{4}+\frac{1}{6},\ldots$
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
(c) 
\begin_inset Formula $\frac{1}{2},\frac{2}{4},\frac{3}{8},\ldots,a_{n}=n/2^{n}$
\end_inset

 
\end_layout

\begin_layout Plain Layout

\size small
(d) 
\begin_inset Formula $1.1,1.11,1.111,\ldots$
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
(e) 
\begin_inset Formula $a_{n}=\sqrt[n]{n}$
\end_inset


\end_layout

\begin_layout Plain Layout

