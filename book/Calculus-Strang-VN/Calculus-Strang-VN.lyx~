\begin_layout Standard

\size small
\begin_inset Flex Multiple Columns
status collapsed

\begin_layout Plain Layout
\noindent

\series bold
\size small
Các câu hỏi điền từ vào chỗ trống
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset VSpace 10pt
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
Giữa các quãng quãng 
\begin_inset Formula $f(2)=100$
\end_inset

 và 
\begin_inset Formula $f(6)=200$
\end_inset

, vận tốc trung bình là 
\begin_inset Formula $\underbar{\quad a\quad}$
\end_inset

.
 Nếu 
\begin_inset Formula $f(t)=\frac{1}{4}t^{2}$
\end_inset

, khi đó 
\begin_inset Formula $f(6)=\underbar{\quad b\quad}$
\end_inset

 và 
\begin_inset Formula $f(8)=\underbar{\quad c\quad}$
\end_inset

.
 Vận tốc trung ở giữa là 
\begin_inset Formula $\underbar{\quad d\quad}$
\end_inset

.
 Vận tốc tức thời tại 
\begin_inset Formula $t=6$
\end_inset

 và 
\begin_inset Formula $t=8$
\end_inset

 là 
\begin_inset Formula $\underbar{\quad e\quad}$
\end_inset

và 
\begin_inset Formula $\underbar{\quad f\quad}$
\end_inset

.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset VSpace 10pt
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
Vận tốc trung bình được tính từ 
\begin_inset Formula $f(t)$
\end_inset

 và 
\begin_inset Formula $f(t+h)$
\end_inset

 bởi 
\begin_inset Formula $v_{\mbox{tb}}=\underbar{\quad g\quad}$
\end_inset

.
 Nếu 
\begin_inset Formula $f(t)=t^{2}$
\end_inset

, 
\begin_inset Formula $v_{\mbox{tb}}=\underbar{\quad h\quad}$
\end_inset

.
 Từ 
\begin_inset Formula $t=1$
\end_inset

 tới 
\begin_inset Formula $t=1.1$
\end_inset

, vận tốc trung bình là 
\begin_inset Formula $\underbar{\quad i\quad}$
\end_inset

.
 Vận tốc tức thời là 
\begin_inset Formula $\underbar{\quad j\quad}$
\end_inset

 của 
\begin_inset Formula $v_{\mbox{tb}}$
\end_inset

.
 Nếu quãng đường là 
\begin_inset Formula $f(t)=\frac{1}{2}at^{2}$
\end_inset

, vận tốc là 
\begin_inset Formula $v(t)=\underbar{\quad k\quad}$
\end_inset

 và gia tốc là 
\begin_inset Formula $\underbar{\quad l\quad}$
\end_inset

.
\end_layout

\begin_layout Plain Layout

\size small
\begin_inset VSpace 10pt
\end_inset


\end_layout

\begin_layout Plain Layout

\size small
Trên đồ thị của 
\begin_inset Formula $f(t)$
\end_inset

, vận tốc trung bình giữa 
\begin_inset Formula $A$
\end_inset

 và 
\begin_inset Formula $B$
\end_inset

 là hệ số góc của 
\begin_inset Formula $\underbar{\quad m\quad}$
\end_inset

.
 Vận tốc tại 
\begin_inset Formula $A$
\end_inset

 được tìm thấy bởi 
\begin_inset Formula $\underbar{\quad n\quad}$
\end_inset

.
 Vận tốc tại 
\begin_inset Formula $B$
\end_inset

 được tìm thấy bởi 
\begin_inset Formula $\underbar{\quad o\quad}$
\end_inset

.
 Khi vận tốc là dương, quãng đường là 
\begin_inset Formula $\underbar{\quad p\quad}$
\end_inset

.
 Khi vận tốc tăng, chiếc xe 
\begin_inset Formula $\underbar{\quad q\quad}$
\end_inset

.
\end_layout

\begin_layout Exercise

