 & \mathtt{PrgmC:COBWEB\qquad:Disp\;"INITIAL\;X\emptyset}"\qquad\mathtt{:Input\;X}\qquad\mathtt{:All-Of}\\
 & \mathtt{:Y_{1}-On}\qquad\mathtt{"X"\to Y_{4}}\qquad\mathtt{:Lbl\;1}\qquad\mathtt{:X\to S}\qquad\mathtt{:Y_{1}\to T}\qquad\mathtt{:Line(S,S,S,T)}\\
