name "fig:4-3"

\end_inset

 Hình vuông đối với Ví dụ 
\begin_inset CommandInset ref
LatexCommand ref
reference "exa:4-2-6"

\end_inset

, bóng hình đối với Ví dụ 
\begin_inset CommandInset ref
LatexCommand ref
reference "exa:4-2-7"

\end_inset

, bóng bay đối với Ví dụ 
\begin_inset CommandInset ref
LatexCommand ref
reference "exa:4-2-8"

\end_inset

.
\end_layout

\end_inset


\end_layout

\end_inset


