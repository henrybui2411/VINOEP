\begin_layout Exercise

\size small
(a) Nếu 
\begin_inset Formula $a_{n}\rightarrow L$
\end_inset

 và 
\begin_inset Formula $b_{n}\rightarrow L$
\end_inset

, khi đó 
\begin_inset Formula $a_{n}/b_{n}\rightarrow1$
\end_inset


\end_layout

\begin_layout Exercise

\size small
(b) 
\begin_inset Formula $a_{n}\rightarrow L$
\end_inset

 khi và chỉ khi 
\begin_inset Formula $a_{n}^{2}\rightarrow L^{2}$
\end_inset


\end_layout

\begin_layout Exercise

\size small
(c) Nếu 
\begin_inset Formula $a_{n}<0$
\end_inset

 và 
\begin_inset Formula $a_{n}\rightarrow L$
\end_inset

, khi đó 
\begin_inset Formula $L<0$
\end_inset


\end_layout

\begin_layout Exercise

\size small
(d) Nếu có vô hạn các 
\begin_inset Formula $a_{n}$
\end_inset

 nằm trong mỗi dải quanh không, khi đó 
\begin_inset Formula $a_{n}\to0$
\end_inset

.
\end_layout

