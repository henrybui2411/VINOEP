\begin_inset Formula $(2,6)$
\end_inset

.
\end_layout

\begin_layout Exercise

\size small
(c) Tìm phương trình của pháp tuyến tại 
\begin_inset Formula $(2,6)$
\end_inset

.
\end_layout

\begin_layout Exercise

\size small
(d) Tìm phương trình của cát tuyến qua 
\begin_inset Formula $(4,3)$
\end_inset

.
\end_layout

\begin_layout Plain Layout

