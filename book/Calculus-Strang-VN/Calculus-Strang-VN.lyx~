\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Example
\begin_inset CommandInset label
LatexCommand label
name "exa:4-3-2"

\end_inset

 
\begin_inset Formula $y=\frac{5}{9}(x-32)$
\end_inset

 và 
\begin_inset Formula $x=f(y)=\frac{9}{5}(y+32)$
\end_inset

 là các hàm ngược (để chuyển đổi giữa các đơn vị của nhiệt độ).
 Ở đây 
\begin_inset Formula $x$
\end_inset

 là độ Fahrenheit và 
\begin_inset Formula $y$
\end_inset

 là độ Cencius.
 Từ 
\begin_inset Formula $x=32$
\end_inset

 (nhiệt độ đóng băng trong thang Fahrenheit) bạn thu được 
\begin_inset Formula $y=0$
\end_inset

 (nhiệt độ đóng băng thang Cencius).
 Hàm ngược của nó nhận 
\begin_inset Formula $y=0$
\end_inset

 để đưa ra 
\begin_inset Formula $x=32$
\end_inset

.
 Hình 
\begin_inset CommandInset ref
LatexCommand ref
reference "fig:4-4"

\end_inset

 cho thấy khi 
\begin_inset Formula $x=50^{\circ}\mathrm{F}$
\end_inset

 khớp với 
\begin_inset Formula $y=10^{\circ}C$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
Lưu ý rằng 
\begin_inset Formula $\frac{5}{9}(x-32)$
\end_inset

 trừ 
\begin_inset Formula $32$
\end_inset

 
\emph on
đầu tiên
\emph default
.
 Hàm ngược 
\begin_inset Formula $\frac{9}{5}y+32$
\end_inset

 cộng 
\begin_inset Formula $32$
\end_inset

 
\emph on
sau cùng
\emph default
.
 Tương tự 
\begin_inset Formula $g$
\end_inset

 nhân bởi 
\begin_inset Formula $\frac{5}{9}$
\end_inset

 sau cùng trong khi 
\begin_inset Formula $f$
\end_inset

 nhân bởi 
\begin_inset Formula $\frac{9}{5}$
\end_inset

 đầu tiên.
\end_layout

