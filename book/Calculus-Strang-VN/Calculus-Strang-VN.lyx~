\begin_layout Exercise

\size small
\begin_inset CommandInset label
LatexCommand label
name "exer:1-5-19"

\end_inset

Hai góc phụ
\size default

\begin_inset Index idx
status open

\begin_layout Plain Layout
Góc!phụ
\end_layout

\end_inset


\size small
 nhau có 
\begin_inset Formula $\sin\theta=\cos(\frac{\pi}{2}-\theta)$
\end_inset

.
 Viết 
\begin_inset Formula $\sin(s+t)$
\end_inset

 dưới dạng 
\begin_inset Formula $\cos(\frac{\pi}{2}-s-t)$
\end_inset

 và áp dụng công thức 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:1-5-4"

\end_inset

 với 
\begin_inset Formula $\pi/2-s$
\end_inset

 thay vì 
\begin_inset Formula $s$
\end_inset

.
 Bằng cách này, rút ra công thức cộng 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:1-5-9"

\end_inset

.
\end_layout

