\begin_inset Text

\begin_layout Plain Layout
\begin_inset Formula $\mathbf{A\times B}=\left|\begin{array}{ccc}
\mathbf{i} & \mathrm{\mathbf{j}} & \mathbf{k}\\
a_{1} & a_{2} & a_{3}\\
b_{1} & b_{2} & b_{3}
\end{array}\right|=\begin{array}{c}
\mathbf{i}(a_{2}b_{3}-a_{3}b_{2})\\
+\mathbf{j}(a_{3}b_{1}-a_{1}b_{3})\\
+\mathbf{k}(a_{1}b_{2}-a_{2}b_{1})
\end{array}$
\end_inset


\end_layout

\end_inset
