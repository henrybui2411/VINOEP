\begin_inset Graphics
	filename Figure/2/2_3.pdf
	width 5in

\end_inset


\end_layout

\begin_layout Plain Layout
\begin_inset Caption Standard

\begin_layout Plain Layout
\begin_inset CommandInset label
LatexCommand label
name "fig:2-3"

\end_inset

 Đạo hàm của 
\begin_inset Formula $1/t$
\end_inset

 là 
\begin_inset Formula $-1/t^{2}$
\end_inset

.
 Hệ số góc của 
\begin_inset Formula $1/x$
\end_inset

 là 
\begin_inset Formula $-1/x^{2}$
\end_inset

.
\end_layout

\end_inset


\end_layout

\end_inset


\end_layout

